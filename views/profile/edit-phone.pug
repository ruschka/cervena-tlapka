extends ../main-template

block description
    title Změna mobilu | Červená tlapka
    meta(name="description", content="Platforma propojující dobrovolné psí dárce krve s těmi, kteří potřebují jejich laskavou pomoc.")

block prepend css
    link(rel="stylesheet", type="text/css", href="/static/css/intlTelInput.min.css")

block append scripts
    script(src="/static/script/intl-tel-input/intlTelInput.min.js")

block content
    include ../includes/forms
    include ../includes/recaptcha
    include ../includes/phone-input
    div.w3-container.w3-row-padding
        div.w3-half
            - var loggedUser = templateData.loggedUser
            - var data = templateData.data
            - var errors = templateData.errors
            h1 Změna mobilu
            form(method="post", action="/profile/edit-phone")
                +input("tel", "phone", "Mobil:", data, errors, { entity: loggedUser, hiddenErrorPanel: true })
                div.w3-container.w3-section
                    +submit()
                +phoneInput("#phone")
        div.w3-half
