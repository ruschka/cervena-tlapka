extends ../main-template

block content
    div.w3-container.w3-row-padding
        - var registration = templateData.registration
        div.w3-half
            h1 Registrace dárce
            ul
                li Jméno: #{registration.name}
                li Hmotnost: #{registration.weight}
                li Rok narození: #{registration.birthYear}
                li Pohlaví: #{registration.sex === 'M' ? 'Pes' : 'Fena'}
                li Plemeno: #{registration.breed}
                li Místo: #{registration.city} (#{registration.zip})
        div.w3-half
            h2 Kontaktní formulář
            p TODO Zde bude kontaktní formulář, který odešle email majiteli dárce.