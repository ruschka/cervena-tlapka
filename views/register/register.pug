extends ../main-template

block append scripts
    script(src="https://secure.smartform.cz/api/v1/smartform.js" async=true)
    script.
        var smartform = smartform || {};

        smartform.beforeInit = function initialize() {
            smartform.setClientId('MrVx1RL97R');
        }

block content
    div.w3-container.w3-row-padding
        div.w3-half
            - var data = templateData.data
            - var errors = templateData.errors
            h1 Registrace
            form(method='post', action='/register')
                div.w3-container
                    label(for='email') Email:
                    input#email.w3-input.w3-border(type='text', name='email', value=data ? data.email : '')
                    if errors && errors.email
                        div.w3-panel.w3-red: p= errors.email
                div.w3-container
                    label(for='password') Heslo:
                    input#password.w3-input.w3-border(type='password', name='password')
                    if errors && errors.password
                        div.w3-panel.w3-red: p= errors.password
                div.w3-container
                    label(for='passwordConfirm') Potvrdit heslo:
                    input#passwordConfirm.w3-input.w3-border(type='password', name='passwordConfirm')
                div.w3-container
                    label(for='street') Ulice:
                    input#street.w3-input.w3-border.smartform-street-and-number(type='text', name='street', value=data ? data.street : '')
                    if errors && errors.street
                        div.w3-panel.w3-red: p= errors.street
                div.w3-container
                    label(for='city') Město:
                    input#city.w3-input.w3-border.smartform-city(type='text', name='city', value=data ? data.city : '')
                    if errors && errors.city
                        div.w3-panel.w3-red: p= errors.city
                div.w3-container
                    label(for='zip') PSČ:
                    input#zip.w3-input.w3-border.smartform-zip(type='text', name='zip', value=data ? data.zip : '')
                    if errors && errors.zip
                        div.w3-panel.w3-red: p= errors.zip
                div.w3-container.w3-section
                    input#g-recaptcha-response(type="hidden", name="g-recaptcha-response")
                    input.w3-input.w3-border(type='submit', value='Odeslat')
                - var recaptchaAction = "register"
                include ../includes/recaptcha-script
        div.w3-half
