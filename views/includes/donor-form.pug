include ../includes/recaptcha
- var data = templateData.data
- var errors = templateData.errors
- var actualYear = templateData.actualYear
- var registration = templateData.registration
div.w3-container
    label(for='name') Jméno:
    input#name.w3-input.w3-border(type='text', name='name', value=data ? data.name : registration ? registration.name : '')
    if errors && errors.name
        div.w3-panel.w3-red: p= errors.name
div.w3-container
    label(for='weight') Hmotnost (kg):
    input#weight.w3-input.w3-border(type='number', name='weight', value=data ? data.weight : registration ? registration.weight : '', step=1, min=0)
    if errors && errors.weight
        div.w3-panel.w3-red: p= errors.weight
div.w3-container
    - var n = 0
    label(for='birth-year') Rok narození:
    select#birth-year.w3-select.w3-border(name='birthYear')
        - var selectedYear = data ? parseFloat(data.birthYear) : registration ? registration.birthYear : actualYear
        while n < 30
            - var year = actualYear - n++
            option(value=year, selected=selectedYear === year)= year
    if errors && errors.birthYear
        div.w3-panel.w3-red: p= errors.birthYear
div.w3-container
    label(for='sex') Pohlaví:
    select#sex.w3-select.w3-border(name='sex')
        - var selectedSex = data ? data.sex : registration ? registration.sex : ''
        option(label='Pes', value='M', selected=selectedSex === 'M' : false)
        option(label='Fena', value='F', selected=selectedSex === 'F' : false)
    if errors && errors.sex
        div.w3-panel.w3-red: p= errors.sex
div.w3-container
    label(for='breed') Plemeno:
    input#breed.w3-input.w3-border(type='text', name='breed', value=data ? data.breed : registration ? registration.breed : '')
    if errors && errors.breed
        div.w3-panel.w3-red: p= errors.breed
div.w3-container.w3-section
    +recaptchaInput()
    input.w3-input(type='submit', value='Odeslat')
+recaptchaScript(recaptchaAction)